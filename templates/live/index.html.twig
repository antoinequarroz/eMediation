{% extends 'base.html.twig' %}

{% block title %}Live{% endblock %}
{% block navbar %}{% endblock %}

{% block content %}

    <div><img src="./assets/img/shapes/waves/MvWave.svg" alt="ss" style="position: absolute;"></div>
    <section data-jarallax="" data-speed=".8" class="pt-10 pb-1 py-md-1 overlay" style="background-image: none;" data-jarallax-original-styles="">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 text-left">

                    <!-- Heading -->
                    <h1 class="display-2 text-white font-weight-bold mt-13 mb-13">Nos lives</h1>

                </div>
            </div> <!-- / .row -->
        </div> <!-- / .container -->
        <div id="jarallax-container-0" style="position: absolute; top: 0px; left: 0px; width: 100%; height: 100%; overflow: hidden; z-index: -100;">
            <div  style="background-position: 50% 50%; background-size: cover; background-repeat: no-repeat; background-image: url('assets/img/shapes/waves/MvWave.svg'); position: absolute; top: 0px; left: 0px; width: 100%; height: 55%; overflow: hidden; pointer-events: none; transform-style: preserve-3d; backface-visibility: hidden; will-change: transform, opacity; margin-top: 0px; transform: translate3d(0px, -7px, 0px);">
            </div>
        </div>
    </section>

    <section>
        <div class="container">
            <div class="row">

                <div class="col-lg-4 col-md-6">
                    <h2>Filtrer</h2>
                    {{ form(form) }}
                </div>
                {% for live in lives %}
                    <div class="col-9 col-md-6 col-lg-4 d-flex">
                        <!-- Card -->
                        <div class="card mb-10 mb-lg-0 shadow-light-lg lift lift-lg mt-3" style="width: 373px">

                            <!-- Image -->
                            <a class="card-img-top" href="{{ path("lives", {"slug" : live.slug } )}}">

                                <!-- Image -->
                                <img src="./uploads/{{ live.image }}" alt="..." class="card-img-top" sizes=px height="204px">

                            </a>

                            <!-- Body -->
                            <a class="card-body shadow-dark" style="border-radius: 6px; height: 182px" href="{{ path("lives", {"slug" : live.slug } )}}">

                                <!-- Heading -->
                                <h3>
                                    {{live.title}}
                                </h3>

                                <!-- Text -->
                                <p class="mb-0 text-muted">
                                    {{ live.sousTitre }}
                                </p>

                            </a>

                        </div>

                    </div>
                {% endfor %}
            </div> <!-- / .row -->
        </div> <!-- / .container -->
    </section>

{% endblock %}

