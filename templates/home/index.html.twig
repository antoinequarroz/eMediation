{% extends 'base.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block navbar %}{% endblock %}

{% block content %}

    <style>
        .example-wrapper code { background: #F8F8F8; padding: 2px 6px; }
    </style>

    <section data-jarallax="" data-speed=".8" class="pt-10 pb-11 py-md-14 overlay overlay-60 jarallax" style="background-image: none;" data-jarallax-original-styles="background-image: url(assets/img/photos/photo-31.png);">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-8 text-center">

                    <!-- Heading -->
                    <h1 class="display-2 text-white font-weight-normal">eMédiation</h1> <!-- Titre de la homepage -->

                    <!-- Text -->
                    <p class="lead text-white-75 mb-0">
                        Vous cherchez du contenu en ligne ? <br> <!-- Sous titre -->
                        Vous êtes au bon endroit </p> <!-- Sous titre -->

                </div>
            </div> <!-- / .row -->
        </div> <!-- / .container -->
        <!-- Image de la homepage -->
        <div id="jarallax-container-0" style="position: absolute; top: 0px; left: 0px; width: 100%; height: 100%; overflow: hidden; z-index: -100; border-radius: ">
            <div  style="background-position: 50% 50%; background-size: cover; background-repeat: no-repeat; background-image: url('assets/img/photos/photo-31.png'); position: absolute; top: 0px; left: 0px; width: 100%; height: 746px; overflow: hidden; pointer-events: none; transform-style: preserve-3d; backface-visibility: hidden; will-change: transform, opacity; margin-top: 0px; transform: translate3d(0px, -7px, 0px);">
            </div>
        </div>
    </section>

    <section class="pt-7 pt-md-10">
        <div class="container">
            <div class="row align-items-center mb-5">
                <div class="col-12 col-md">

                    <!-- Heading -->
                    <h1 class="mb-0 text-dark font-weight-bold">
                        Les dernières vidéos
                    </h1>

                </div>
                <div class="col-12 col-md-auto">

                    <!-- Button -->
                    <a href="{{ path('videos') }}" class="btn btn-sm btn-outline-gray-300 d-none d-md-inline font-weight-normal"> <!-- Lien vers la page des vidéos -->
                        Plus de vidéos
                    </a>

                </div>
            </div> <!-- / .row -->

            <div class="row">
                {% for video in videos %} <!-- Boucle for qui va chercher le contenus des entités pour les afficher -->
                <div class="col-12 col-md-6 col-lg-4 d-flex">

                    <!-- Card -->
                    <div class="card mb-6 mb-lg-0 shadow-light-lg lift lift-lg" style="width: 373px">

                        <!-- Image -->
                        <a class="card-img-top" href="{{ path("video", {"slug" : video.slug } )}}"> <!-- Lien de la page de la vidéo. URL par le slug -->

                            <!-- Image -->
                            <img src="./uploads/{{ video.image }}" alt="..." class="card-img-top" sizes=px height="204px"> <!-- Image de la vidéo -->

                        </a>

                        <!-- Body -->
                        <a class="card-body shadow-dark" style="border-radius: 6px; height: 182px" href="{{ path("video", {"slug" : video.slug } )}}"> <!-- Lien de la page de la vidéo. URL par le slug -->

                            <!-- Heading -->
                            <h3>
                                {{video.title}} <!-- Titre de la vidéo -->
                            </h3>

                            <!-- Text -->
                            <p class="mb-0 text-muted">
                                {{ video.sousTitre }} <!-- Sous-titre de la vidéo -->
                            </p>

                        </a>

                    </div>

                </div>
                {% endfor %} <!-- Fin de la boucle for -->

            </div> <!-- / .row -->
        </div> <!-- / .container -->
