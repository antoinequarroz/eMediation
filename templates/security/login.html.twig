{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block content %}
    <div class="container mt-10">
        <div class="row" >
            <div class="col-2"></div>
            <div class="col-8">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            Vous êtes connecté en temps que {{ app.user.prenom }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                        </div>
                    {% endif %}

                    <div class="card-body shadow-dark-lg" style="border-radius: 6px;">
                        <h1 class="h2 mb-3 font-weight-normal">Vous connecter</h1>
                        <br>
                        <label for="inputEmail" class="">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Votre email" required autofocus>
                        <br>
                        <label for="inputPassword" class="mt-3">Password</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Votre mot de passe" required>
                        <br>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}">

                        {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                        #}

                        <button class="btn btn-sm btn-primary font-weight-normal mt-3" type="submit">
                            Se connecter
                        </button>
                    </div>
                    </form>
            </div>
            <div class="col-2"></div>
        </div>
    </div>
    <br>
    <br>
    <br>
{% endblock %}
