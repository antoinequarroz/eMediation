{% extends 'base.html.twig' %} <!-- extend le fichier twig base.index.twig -->
{% block navbar %}{% endblock %} <!-- Intègre la barre de navigation dans le code -->
{% block title %}Compte de {{ app.user.prenom }}{% endblock %} <!-- app.user.prenom ajoute le nom de l'utilisateur connecté -->

{% block content %}
    <header class="bg-primary pt-9 pb-11 d-none d-md-block">
        <div class="container-md">
            <div class="row align-items-center">
                <div class="col">

                    <!-- Heading -->
                    <h1 class="font-weight-bold text-white mb-2">
                        Compte
                    </h1>

                    <!-- Text -->
                    <p class="font-size-lg text-white-75 mb-0">
                        de <a class="text-reset" href="mailto:{{app.user.email}}">{{ app.user.prenom }}</a> <!-- envoie un mail vers l'email de l'utilisateur connecté -->
                    </p>

                </div>
                <div class="col-auto">

                    <!-- Button -->
                    <a href="{{ path('app_logout') }}"> <!-- route de déconnexion -->
                        <button class="btn btn-sm btn-gray-300-20 shadow-dark-lg">
                            Log Out
                        </button>
                    </a>
                </div>
            </div> <!-- / .row -->
        </div> <!-- / .container -->
    </header>

    <main class="pb-8 pb-md-11 mt-md-n6">
        <div class="container-md">
            <div class="row">
                <div class="col-12 col-md-3">

                    <!-- Card -->
                    <div class="card card-bleed border-bottom border-bottom-md-0 shadow-light-lg">

                        <!-- Collapse -->
                        <div class="collapse d-md-block" id="sidenavCollapse">
                            <div class="card-body">

                                <!-- Heading -->
                                <h6 class="font-weight-bold text-uppercase mb-3">
                                    Compte
                                </h6>

                                <!-- List -->
                                <ul class="card-list list text-gray-700 mb-2">
                                    <li class="list-item active">
                                        <a class="list-link text-reset" href="{{ path('account') }}"> <!-- route du compte -->
                                            General
                                        </a>
                                    </li>
                                    <li class="list-item">
                                        <a class="list-link text-reset" href="{{ path('account_password') }}"> <!-- route de la modification du mot de passe -->
                                            Mot de passe
                                        </a>
                                    </li>
                                    <li class="list-item">
                                        <a class="list-link text-reset" href="{{ path('admin') }}"> <!-- route vers l'admin -->
                                            Admin
                                        </a>
                                    </li>
                                </ul>

                            </div>
                        </div>

                    </div>

                </div>
                <div class="col-12 col-md-9">

                    <!-- Card -->
                    <div class="card card-bleed shadow-dark-lg mb-6">
                        <div class="card-header">

                            <!-- Heading -->
                            <h4 class="mb-0">
                                Information de base
                            </h4>

                        </div>
                        <div class="card-body">

                            <!-- Form -->
                            <form>
                                <div class="row">
                                    <div class="col-12 col-md-6">

                                        <!-- Name -->
                                        <div class="form-group">
                                            <h4>Prénom :</h4>
                                            {{ app.user.prenom }} <!-- prénom de l'utilisateur -->
                                        </div>

                                    </div>
                                    <div class="col-12 col-md-6">

                                        <!-- Email -->
                                        <div class="form-group">
                                            <h4>Email :</h4>
                                            {{ app.user.email }} <!-- email de l'utilisateur -->
                                        </div>

                                    </div>

                                    <div class="col-12 col-md-6">

                                        <!-- Name -->
                                        <div class="form-group">
                                            <h4>Nom :</h4>
                                            {{ app.user.nom }} <!-- nom de l'utilisateur -->
                                        </div>

                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                    <!-- Text -->
                    <p class="text-center mb-0">
                        <small class="text-muted">Si vous voulez <a class="text-danger" href="{{path('admin')}}">supprimer votre compte</a>.</small> <!-- route vers l'admin pour supprimer le compte -->
                    </p>

                </div>
            </div> <!-- / .row -->
        </div> <!-- / .container -->
    </main>
{% endblock %}
